<div class="product-card">
    <!--
      PRODUCT IMAGE
      Main product visual with responsive sizing
    -->
    <div class="product-card__image-container">
        <img src="{{ product.image | default: 'placeholder-image.jpg' }}"
             alt="{{ product.title | escape }}"
             class="product-card__image"
             loading="lazy">
    </div>

    <!--
      PRODUCT INFO WRAPPER
      Contains text elements (title, price)
    -->
    <div class="product-card__info">
        <!-- PRODUCT TITLE - Truncated to 2 lines max -->
        <h3 class="product-card__title">{{ product.title }}</h3>

        <!--
          PRODUCT PRICE
          Formatted with currency and original price if on sale
        -->
        <div class="product-card__pricing">
            <p class="product-card__price">${{ product.price | money_without_currency }}</p>
            {% if product.compare_at_price > product.price %}
                <p class="product-card__original-price">${{ product.compare_at_price | money_without_currency }}</p>
            {% endif %}
        </div>

        <!--
          PRODUCT TAGS
          Only displayed if tags exist
          Uses inline list for better semantics
        -->
        {% if product.tags.size > 0 %}
            <ul class="product-card__tag-list">
                {% for tag in product.tags limit: 3 %}
                    <li class="product-card__tag">
                        {{ tag }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>