<!-- Main products section container -->
<div id="products" class="products-section">
    <!-- Products grid container - handles layout -->
    <div class="products-grid">
        <!-- Loop displays first 4 products -->
        {% for product in products limit: 4 %}
            <!-- Individual product card component -->
            {% render 'product-card', product: product %}
        {% endfor %}

        <!-- Hidden products container - revealed on click -->
        <div class="products-grid__hidden" id="more-products">
            <!-- Loop displays remaining products (offset 4) -->
            {% for product in products offset: 4 %}
                <!-- Individual product card component -->
                {% render 'product-card', product: product %}
            {% endfor %}
        </div>

        <!-- View all button - toggles hidden products -->
        <button class="products-grid__view-all"
                aria-expanded="false"
                aria-controls="more-products">
            View All
        </button>
    </div>
</div>