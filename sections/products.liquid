<section class="products-section" id="products">
    <!-- PRODUCT GRID/CAROUSEL -->
    <div class="products-grid">
        <!--
          INITIAL PRODUCTS (visible by default)
          Using limit: 4 to show first 4 products
        -->
        {% for product in products limit: 4 %}
            {% render 'product-card', product: product %}
        {% endfor %}

        <!--
          HIDDEN PRODUCTS (revealed on interaction)
          Using offset: 4 to skip first 4 products
        -->
        <div class="products-grid__hidden" id="more-products">
            {% for product in products offset: 4 %}
                {% render 'product-card', product: product %}
            {% endfor %}
        </div>

        <!--
          VIEW ALL TOGGLE
          Toggles visibility of hidden products
        -->
        <button class="products-grid__view-all"
                aria-expanded="false"
                aria-controls="more-products">
            View All Products
        </button>
    </div>
</section>